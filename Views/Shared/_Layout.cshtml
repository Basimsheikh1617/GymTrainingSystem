<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymTrainingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymTrainingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f0f2f5;
            margin: 0;
            overflow-x: hidden;
            color: #1e2a44;
            transition: background 0.3s, color 0.3s;
        }

            /* DARK MODE */
            body.dark-mode {
                background-color: #121212;
                color: #e0e0e0;
            }

               /*  body.dark-mode button.toggle-btn i 
                {
                    color:white;
                } */

               /*  body.dark-mode .header {
                    background-color: #1e1e1e;
                    border-bottom: 1px solid #333;
                    box-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
                } */

               /*  body.dark-mode .sidebar {
                    background-color: #0d1117;
                }

                    body.dark-mode .sidebar ul li:hover {
                        background-color: #1e2a44;
                    } */

                body.dark-mode .card {
                    background-color: #1e1e1e;
                    color: #e0e0e0;
                    box-shadow: 0 2px 5px rgba(255,255,255,0.1);
                }

                body.dark-mode .dropdown-menu {
                    background-color: #1e1e1e;
                }

                /* body.dark-mode .header .navbar-bran{
                    color:white !important;
                } */
                    body.dark-mode .dropdown-menu a {
                        color: #ddd;
                    }

                        body.dark-mode .dropdown-menu a:hover {
                            background-color: #333;
                        }


        .wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .sidebar {
            width: 80px;
            background-color: #1e2a44;
            color: white;
            position: fixed;
            top: 56px;
            left: 0;
            height: calc(100% - 56px);
            padding: 20px 0;
            transition: all 0.3s;
            z-index: 1000;
            overflow-y: auto;
        }

            .sidebar.expanded {
                width: 250px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 15px 20px;
                    cursor: pointer;
                    transition: background 0.3s;
                    white-space: nowrap;
                    overflow-x: hidden;
                }

                    .sidebar ul li:hover {
                        background-color: #2c3e50;
                    }

                    .sidebar ul li i {
                        margin-right: 10px;
                    }

            .sidebar.expanded ul li span {
                display: inline;
            }

            .sidebar ul li span {
                display: none;
            }

        .main-content {
            margin-left: 80px;
            padding: 20px;
            width: calc(100% - 80px);
            transition: all 0.3s;
            min-height: 100vh;
            margin-top: 69px;
            overflow-x: hidden;
            overflow-y: auto;
            margin-bottom: 69px;
        }

            .main-content.shifted {
                margin-left: 250px;
                width: calc(100% - 250px);
            }

        .header {
            background-color: white;
            padding: 0 20px;
            border-bottom: 1px solid #ddd;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1001;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            height: 56px;
            display: flex;
            align-items: center;
        }

            .header .navbar-brand {
                color: black !important;
                margin: 0;
                font-size: 24px;
            }


            .header .toggle-btn {
                background: none;
                border: none;
               
                font-size: 24px;
                cursor: pointer;
                padding: 0 10px;
                margin-right: 10px;
            }

            .header .user-profile {
                display: flex;
                align-items: center;
                margin-left: auto;
                gap: 15px;
            }

                .header .user-profile img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                }

        /* Dark Mode Toggle Button */
        .theme-toggle {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 20px;
            color: #1e2a44;
            transition: transform 0.4s ease, color 0.3s;
        }

            .theme-toggle.rotate {
                transform: rotate(180deg);
            }

       /*  body.dark-mode .theme-toggle {
            color: #f1f1f1;
        } */

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            text-align: center;
            min-height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .footer {
            width: calc(100% - 80px);
            transition: all 0.3s;
            padding: 10px 0;
            margin-top: 20px;
            position: relative;
        }

            .footer.shifted {
                margin-left: 250px;
                width: calc(100% - 250px);
            }

        .dropdown {
            position: relative;
        }

        .dropdown-toggle {
            background: none;
            border: none;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            font-size: 16px;
            color: #333;
        }

            .dropdown-toggle img {
                border-radius: 50%;
                width: 40px;
                height: 40px;
            }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            top: 110%;
            background-color: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
            min-width: 150px;
            z-index: 1000;
        }

            .dropdown-menu a {
                display: block;
                padding: 10px 15px;
                color: #333;
                text-decoration: none;
            }

                .dropdown-menu a:hover {
                    background-color: #f1f1f1;
                }

        a{
            text-decoration:none;
        }

        .fa-sun:before {
            content: "\f185";
            color: yellow;
        }

        .sidebar li span a{
            color:white !important;
        }
    </style>
</head>
@using GymTrainingSystem.Helper
@{
        var sessionUser = ApplicationHelper.GetUserSession(Context);
            ViewBag.Name = @sessionUser?.ClientName;
}
<body>
    <div class="wrapper">
        <div class="sidebar">
            <ul>
                <li><i class="fas fa-tachometer-alt"></i> <span><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></span></li>
                <li><i class="fas fa-chart-bar"></i> <span><a asp-area="" asp-controller="Home" asp-action="Member">Add Member</a></span></li>
                <li><i class="fas fa-users"></i><span><a asp-controller="Member" asp-action="Members">Users</a></span></li>
                <li><i class="fas fa-cog"></i> <span><a asp-area="" asp-controller="Fees" asp-action="PaidFees">Pay Fees</a></span></li>
            </ul>
        </div>

        <div class="main-content">
            <header class="header">
                <button class="toggle-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
                <label class="navbar-brand">@sessionUser?.ClientName</label>

                <div class="user-profile">
                    <!-- Theme Toggle Button -->
                    <button id="themeToggle" class="theme-toggle" title="Toggle theme">
                        <i class="fas fa-moon"></i>
                    </button>

                    <!-- Dropdown -->
                    <div class="dropdown">
                        <button class="dropdown-toggle" onclick="toggleDropdown()">
                            <img src="~/@(string.IsNullOrEmpty(sessionUser?.Logo)
                                                                                  ? Url.Content("~/images/default-logo.png")
                                                                                  : sessionUser.Logo)"
                                 alt="User Logo" width="40" height="40" class="rounded-circle" />
                        </button>
                        <div id="userDropdown" class="dropdown-menu">
                            <a asp-controller="Home" asp-action="Profile">My Profile</a>
                            <a asp-controller="Login" asp-action="Logout">Logout</a>
                        </div>
                    </div>

                    <a asp-controller="Login" asp-action="Logout" title="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - GymTrainingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Sidebar
        function toggleSidebar() {
            $('.sidebar').toggleClass('expanded');
            $('.main-content').toggleClass('shifted');
            $('.footer').toggleClass('shifted');
        }

        // Dropdown
        function toggleDropdown() {
            document.getElementById("userDropdown").classList.toggle("show");
        }

        window.onclick = function(event) {
            if (!event.target.closest('.dropdown')) {
                document.getElementById("userDropdown")?.classList.remove("show");
            }
        };

        // Theme Toggle
        const themeToggle = document.getElementById("themeToggle");
        const currentTheme = localStorage.getItem("theme");

        if (currentTheme === "dark") {
            document.body.classList.add("dark-mode");
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }

        themeToggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            themeToggle.classList.add("rotate");
            setTimeout(() => themeToggle.classList.remove("rotate"), 400);

            if (document.body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                localStorage.setItem("theme", "light");
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
