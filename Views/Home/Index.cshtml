@model Member 
<style>


    /* style.css */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f3f4f9;
        color: #333;
    }

    .dashboard {
        width: 100%;
        margin: 0;
        padding: 20px;
    }

    header {
        text-align: center;
        margin-bottom: 40px;
    }

        header h1 {
            font-size: 36px;
            color: #333;
        }

    .stats {
        display: flex;
        justify-content: space-between;
        margin-bottom: 40px;
    }

    .stat-card {
        background-color: #4CAF50;
        color: white;
        padding: 20px;
        border-radius: 10px;
        width: 30%;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .stat-card h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .stat-card p {
            font-size: 30px;
            font-weight: bold;
        }

    .content {
        display: flex;
        justify-content: space-between;
    }

    .form-container, .members-list {
        width: 48%;
    }

        .form-container h2 {
            margin-bottom: 20px;
            color: #4CAF50;
        }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input, select {
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    button {
        padding: 12px;
        font-size: 16px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }

    .members-list input {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        font-size: 16px;
        border-radius: 8px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
        font-size: 16px;
    }

    th {
        background-color: #f2f2f2;
    }

    td button {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 6px 12px;
        cursor: pointer;
        border-radius: 8px;
    }

        td button:hover {
            background-color: #e53935;
        }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #eaeaea;
    }

</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    <script>
        function onFormSubmitBegin() {
            $('#result').html('Submitting...');
        }

        function onFormSubmitComplete() {
            console.log('Form submission completed.');
        }

        function onFormSuccess(response) {
            $('#result').html('<p style="color:green;">Member added successfully!</p>');
            $('#memberForm')[0].reset();
        }

        function onFormFailure(response) {
            $('#result').html('<p style="color:red;">Error adding member.</p>');
        }
    </script>
}

<body>
    <div class="dashboard">
        <header>
            <h1>Gym Membership Dashboard</h1>
        </header>

        <div class="stats">
            <div class="stat-card">
                <h2>Total Members</h2>
                <p id="totalMembers">0</p>
            </div>
            <div class="stat-card">
                <h2>Active Members</h2>
                <p id="activeMembers">0</p>
            </div>
            <div class="stat-card">
                <h2>Expired Memberships</h2>
                <p id="expiredMembers">0</p>
            </div>
        </div>

        <div class="content">
            <div class="form-container">
                <h2>Add New Member</h2>

<form asp-controller="Home" asp-action="AddMember" method="post" autocomplete="off"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-begin="onFormSubmitBegin"
      data-ajax-complete="onFormSubmitComplete"
      data-ajax-success="onFormSuccess"
      data-ajax-failure="onFormFailure">

    <div>
        <input asp-for="FullName" placeholder="Enter member name" required />
    </div>
    <div>
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>
                    <input type="number" asp-for="ClientId" name="ClientId" value="1" readonly hidden="hidden" />
    <div>
        <input asp-for="Age" type="number" placeholder="Enter age" required />
    </div>
    <div>
        <input asp-for="PhoneNumber" placeholder="Enter phone number" />
    </div>
    <div>
        <input asp-for="Email" type="email" placeholder="Enter email" required />
    </div>
    <div>
        <input asp-for="Address" placeholder="Enter address" />
    </div>
    <div>
        <input asp-for="JoiningDate" type="date" required />
    </div>
    <div>
        <select asp-for="MemberShipType">
            <option value="Monthly">Monthly</option>
            <option value="Yearly">Yearly</option>
        </select>
    </div>
    <div>
        <input asp-for="MemberShipStart" type="date" required />
    </div>
    <div>
        <input asp-for="MemberShipEnd" type="date" required />
    </div>
    <div>
        <select asp-for="PersonalTraining">
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <select asp-for="Status">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
    </div>

    <button type="submit">Add Member</button>
</form>

<div id="result"></div>

            </div>

            <div class="members-list">
                <h2>Members List</h2>
                <input type="text" id="searchInput" placeholder="Search by Name or Email" onkeyup="searchMembers()">
                <table id="membersTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Membership Type</th>
                            <th>Membership Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="membersBody"></tbody>
                </table>
            </div>
        </div>
    </div>

</body>

